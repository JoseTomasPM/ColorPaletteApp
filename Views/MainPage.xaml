<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ColorPaletteApp.ViewModels"
             xmlns:models="clr-namespace:ColorPaletteApp.Models"
             x:Class="ColorPaletteApp.Views.MainPage">

    <Grid RowDefinitions="Auto, *" Margin="30" RowSpacing="20">
        <!-- Eliminar la parte del color picker y dejar solo lo necesario -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Choose base color" FontAttributes="Bold" FontSize="16"/>

            <HorizontalStackLayout Spacing="10">
                <Entry
                    Placeholder="#FF5733"
                    Text="{Binding BaseHex}"
                    WidthRequest="120"/>

                <Button Text="Random" Command="{Binding RandomColorCommand}" />
            </HorizontalStackLayout>

            <!--<Button
                Text="Generate palette"
                Command="{Binding GenerateCommand}"
                HorizontalOptions="Center" /> -->
            
            
        </VerticalStackLayout>
        <!-- Paleta con colores -->
        <ScrollView Grid.Row="1">
            <FlexLayout BindableLayout.ItemsSource="{Binding Colors}" 
                        Wrap="Wrap"
                        JustifyContent="Center"
                        AlignItems="Center"
                        Direction="Row"
                        Margin="0,10,0,0">

                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:ColorItem">
                        <VerticalStackLayout
                            WidthRequest="200"
                            HeightRequest="180"
                            Margin="5"
                            HorizontalOptions="Center">

                            <Border 
                                BackgroundColor="{Binding HexCode}"   
                                Stroke="{Binding HexCode}"
                                StrokeThickness="10"
                                HeightRequest="130"
                                WidthRequest="200">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                            </Border>

                            <Label 
                                Text="{Binding HexCode}" 
                                TextColor="#FFF"
                                BackgroundColor="#333"
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center"
                                Padding="4"/>

                            <Label 
                                Text="{Binding Category}" 
                                FontSize="12"
                                FontAttributes="Italic"
                                TextColor="#888"
                                HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>
    </Grid>
</ContentPage>
